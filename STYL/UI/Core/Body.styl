@import 'nib'

@import 'Font'

body
  font-family $font-ios
  font-weight normal
  font-size $font-size
  color $color
  text-rendering optimizeLegibility
  -webkit-tap-highlight-color transparent
  -webkit-touch-callout none
  -webkit-user-drag none
  -webkit-user-select none
  background #efefef

  &.ios
    overflow hidden

  &.android
    font-family $font-android
