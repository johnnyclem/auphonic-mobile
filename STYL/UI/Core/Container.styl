@import 'nib'
@import 'Header'
@import 'Footer'

div.container
  position absolute
  left 0
  right 0

  .ios &
    top $header-height
    bottom $footer-height-ios

  .android &
    top $header-height + $footer-height-android - 1px // Account for missing header top border

  div.scroll-content
    padding 10px

    .android &
      padding-left 0
      padding-right 0

  transition-property -webkit-transform, opacity
  transition-timing-function ease-in-out
  transition-duration 400ms
  transform translate3d(0, 0, 0)

  &.white
    background #fff

  &.right
    transform translate3d(100%, 0, 0)

  &.left
    transform translate3d(-100%, 0, 0)
