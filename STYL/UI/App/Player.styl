@import 'nib'

.player
  .android &
    margin-top -15px

  .play-button
    position relative
    width 35px
    height 35px

    float left
    overflow visible
    margin-right 10px
    margin-bottom 10px

    border 1px solid #DDD
    background #fff
    box-shadow none

    .ios &
      border-radius 50%
      background -webkit-radial-gradient(40% 40%, #fff, #ddd)

    a
      position absolute
      top -15px
      bottom -15px
      left -10px
      right -10px
      display block

      background-repeat no-repeat
      background-position center center

  div.waveform
    position relative
    cursor pointer
    height 37px
    margin-bottom 10px

    transform translate3d(0, 0, 0) // Fixes Mobile Safari artifacts
    box-shadow none

    div.line
      width 100%
      height 37px
      border-radius 10px
      background rgba(0, 0, 0, 0.1)

    img
      width 100%
      height 37px
      border-radius 10px

    div.position
      position absolute
      left 0
      top 0
      bottom 0
      width 0

      background rgba(0, 0, 0, 0.2)

      .ios &
        border-radius 10px

  div.player-details
    position relative
    overflow hidden
    white-space nowrap
    line-height 1.2em
    transform translate3d(0, 0, 0)

    div.current-time
      float left

    div.duration
      float right

    div.chapter-mark
      position absolute
      top 0
      bottom 0
      left 75px
      right 75px
      text-align center
      overflow ellipsis

      transition-property opacity, -webkit-transform
      transition-timing-function cubic-bezier(.2, .14, .25, .81), ease-in-out
      transition-duration 400ms
      opacity 1
      transform translate3d(0, 0, 0)

      &.right
        opacity 0
        transform translate3d(100%, 0, 0)

      &.left
        opacity 0
        transform translate3d(-100%, 0, 0)

      &.fade
        opacity 0
